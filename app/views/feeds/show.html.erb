<div class="container mt-2">
    <h3 class="text-center">Showing Feed</h3>
    <div class="col card text-center mt-4 rounded-lg shadow">
        <div class="row">
            
            <div class="col col-2 bg-dark text-white d-flex justify-content-center align-items-center">
            <h5 class="mb-3"><small>by</small><br>Random User</h5>
            </div>

            <div class="col col-10">
                <div class="card-body">
                    <h5 class="card-title"><%= @feed.title %></h5>
                    <hr>
                    <p class="card-text"><%= @feed.description %></p>
                </div>
                <div class="d-flex justify-content-center">
                    <%= link_to "Edit", edit_feed_path(@feed), class: "btn btn-outline-success mx-2" %>
                    <%= link_to "Delete", feed_path(@feed), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger mx-2" %>
                </div>
                <%#<% if @feed.has_media? %>
                    <div style="height:400px" class="d-flex justify-content-center">
                        <%= @feed.media.length %>
                        <% @feed.media.each do |item| %>
                            <div class="center mt-2">
                                <% if item.content_type.start_with?("video") %>
                                    <%= video_tag(url_for(item),style:"width: 100%; height: auto", controls: "")%>
                                <% elsif item.content_type.start_with?("image") %>
                                    <%= image_tag(item, style:"width: 400px; height: 400px") %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                <%#<% end %>
                
                <hr>

                <div class="text-muted mb-3">
                    <small> Created <%= time_ago_in_words(@feed.created_at) %> ago,
                    edited <%= time_ago_in_words(@feed.updated_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <%= link_to "Back to Feeds", feeds_path, class: "btn btn-outline-dark btn-lg mt-5" %>
    </div>
</div>