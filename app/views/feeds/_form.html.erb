                            <%= video_tag(url_for(item),style:"width: 100%; height: auto", controls: "")%>
                        <% elsif item.content_type.start_with?("image") %>
                            <%= image_tag(item, style:"width: 400px; height: 400px") %>
                        <% end %>                    
                        <%= link_to "Delete Item", feedmedia_purgelater_path(item), method: :delete, class: "text-light ml-2" %>
                    </div>
                <% end %>
            </div>
        <%#<% end %>


        <div class="form-group row mt-3">
            <%= f.label :media, "Attach Images/Video" , class: "col-2 col-form-label text-light" %>
            <div class="col-10">
                <%= f.file_field :media, class: "shadow rounded"%>
            </div>
        </div>
        <div class="form-group row w-25 m-auto">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

    <% end %>
    <div class="text-center">
        <%= link_to "Back to Feeds", feeds_path, class: "btn btn-outline-dark btn-lg mt-3" %>
    </div>
