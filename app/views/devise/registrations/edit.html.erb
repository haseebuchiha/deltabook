<div class="text-center mt-5">
    <%# <h1> Install/Uninstall Games </h1> %>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-10">
                <h2>Edit <%= resource_name.to_s.humanize %></h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "shadow p-3 mb-3 bg-dark rounded", }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-group row">
                        <%= f.label :username, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <%= f.label :email, class: "col-2 col-form-label text-light" %>
                        <div class="col-10"> 
                            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <%= f.label :Games, class: "col-2 col-form-label text-light" %>
                        <div class="col-10"> 
                            <%= f.collection_select(:game_ids, Game.all, :id, :name,
                            {}, { include_blank: true, multiple: true, size: 3, class: "custom-select p-1" }) %>
                        </div>
                    </div>
                    
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div class="form-group row mt-3">
                            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        </div>
                    <% end %>

                    <i>(leave blank if you don't want to change it)</i><br />
                    <% if @minimum_password_length %>
                        <em><%= @minimum_password_length %> characters minimum</em><br />
                    <% end %>
                    <div class="form-group row mt-3">
                        <%= f.label :password, class: "col-2 col-form-label text-light" %> 
                        <div class="col-10">
                            <%= f.password_field :password, class: "form-control shadow rounded", autocomplete: "new-password" %>
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", autocomplete: "new-password" %>
                        </div>
                    </div>

                    <i>(we need your current password to confirm your changes)</i><br />
                    <div class="form-group row mt-3">
                        <%= f.label :current_password, class: "col-2 col-form-label text-light" %>
                        <div class="col-10"> 
                            <%= f.password_field :current_password,class: "form-control shadow rounded", autocomplete: "current-password" %>
                        </div>
                    </div>
                    
                    <div class="actions mt-3">
                        <%= f.submit "Update", class: "btn btn-outline-light btn-lg" %>
                    </div>
                <% end %>

                <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),class: "btn btn-outline-danger btn-md", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

                <%= link_to "Back", :back %>
            </div>
        </div>
    </div>
</div>

